<odoo>
    <record id="commission_type_view_tree" model="ir.ui.view">
        <field name="name">commission.type.tree</field>
        <field name="model">commission.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="commission_type_view_form" model="ir.ui.view">
        <field name="name">commission.type.form</field>
        <field name="model">commission.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="%(commission_generate_commission_action)d"
                        string="Generate Commission"
                        type="action"
                    />
                </header>
                <sheet>
                <group name="header" colspan="4" col="2">
                    <field name="name" />
                    <field name="code" />
                    <field name="active" />
                </group>
                <notebook colspan="4">
                    <page name="description" string="Description">
                        <field name="description" />
                    </page>
                    <page name="computation" string="Computations">
                        <field name="computation_ids">
                            <tree editable="top">
                                <field name="definition_id" />
                                <field name="account_id" />
                                <field
                                        name="tax_ids"
                                        widget="many2many_tags"
                                        domain="[('id','in',parent.allowed_tax_ids)]"
                                    />
                                <field name="based_on" />
                                <field name="amount_percentage" />
                                <field name="amount_fixed" />
                            </tree>
                        </field>
                    </page>
                    <page name="user" string="Users">
                        <field name="user_ids" />
                    </page>
                    <page name="accounting" string="Accounting Setting">
                        <group name="accounting_1" colspan="4" col="2">
                          <field
                                    name="allowed_payable_account_ids"
                                    widget="many2many_tags"
                                />
                          <field
                                    name="default_payable_account_id"
                                    domain="[('id', 'in', allowed_payable_account_ids)]"
                                />
                          <field
                                    name="allowed_payable_journal_ids"
                                    widget="many2many_tags"
                                />
                          <field
                                    name="payable_journal_id"
                                    domain="[('id', 'in', allowed_payable_journal_ids)]"
                                />
                          <field name="allowed_tax_ids" widget="many2many_tags" />
                        </group>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record id="commission_type_action" model="ir.actions.act_window">
        <field name="name">Commission Type</field>
        <field name="res_model">commission.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="commission_type_menu"
        parent="menu_commission_master"
        action="commission_type_action"
        sequence="1"
    />
</odoo>

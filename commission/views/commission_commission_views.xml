<odoo>
    <record id="commission_commission_view_tree" model="ir.ui.view">
        <field name="name">commission.commission.tree</field>
        <field name="model">commission.commission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="user_id" />
                <field name="type_id" />
                <field name="date_commission" />
                <field name="date_start" />
                <field name="date_end" />
                <field
                    name="amount_before_tax"
                    string="Before Tax"
                    sum="Total Before Tax"
                />
                <field name="amount_tax" string="Tax" sum="Total Tax" />
                <field
                    name="amount_after_tax"
                    string="After Tax"
                    sum="Total After Tax"
                />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="commission_commission_view_form" model="ir.ui.view">
        <field name="name">commission.commission.form</field>
        <field name="model">commission.commission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                        attrs="{'invisible':[('confirm_ok','=',False)]}"
                    />
                    <button
                        name="action_open"
                        type="object"
                        string="Open"
                        class="oe_highlight"
                        attrs="{'invisible':[('open_ok','=',False)]}"
                    />
                    <button
                        name="action_done"
                        type="object"
                        string="Done"
                        class="oe_highlight"
                        attrs="{'invisible':[('done_ok','=',False)]}"
                    />
                    <button
                        name="action_cancel"
                        type="object"
                        string="Cancel"
                        class="oe_highlight"
                        attrs="{'invisible':[('cancel_ok','=',False)]}"
                    />
                    <button
                        name="action_restart"
                        type="object"
                        string="Restart"
                        class="oe_highlight"
                        attrs="{'invisible':[('restart_ok','=',False)]}"
                    />
                    <button
                        name="action_request_approval"
                        string="Request Approval"
                        attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                        type="object"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirm,open,done"
                    />
                </header>
                <sheet>
                    <field name="need_validation" invisible="1" />
                    <field name="approved" invisible="1" />
                    <field name="rejected" invisible="1" />
                    <div
                        role="alert"
                        class="alert alert-warning"
                        attrs="{'invisible': ['|', '|', '|',
                         ('approved', '=', True), ('state', 'not in', ['confirm']),
                         ('rejected', '=', True), ('approval_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                        <p><i class="fa fa-info-circle" />This Record needs to be
                            approved.
                            <button
                                name="action_approve_approval"
                                string="Approve"
                                attrs="{'invisible': [('approval_ids', '=', [])]}"
                                type="object"
                                class="oe_inline oe_button btn-success"
                                icon="fa-check"
                            />
                            <button
                                name="action_reject_approval"
                                string="Reject"
                                type="object"
                                class="btn-icon btn-danger"
                                icon="fa-stop"
                            />
                        </p>
                    </div>
                    <div
                        role="alert"
                        class="alert alert-success"
                        attrs="{'invisible': ['|', '|', ('approved', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                        <p><i class="fa fa-thumbs-up" /> Operation has been <b
                            >approved</b>!</p>
                    </div>
                    <div
                        role="alert"
                        class="alert alert-danger"
                        attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                        <p><i class="fa fa-thumbs-down" /> Operation has been <b
                            >rejected</b>.</p>
                    </div>

                    <group>
                        <group name="left">
                          <field name="user_id" />
                            <field name="type_id" />
                            <field
                                name="allowed_goal_ids"
                                widget="many2many_tags"
                                invisible="1"
                            />
                        </group>
                        <group name="right">
                            <field name="date_commission" />
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="page_detail" string="Commission Detail">
                            <field
                                name="detail_ids"
                                nolabel="1"
                                widget="one2many_list"
                                mode="tree"
                                context="{'default_commission_id': id}"
                            >
                                <tree string="Commission Detail" editable="bottom">
                                    <field
                                        name="goal_id"
                                        domain="[('id','in',parent.allowed_goal_ids)]"
                                    />
                                    <field name="computation_id" invisible="1" />
                                    <field name="date_start" />
                                    <field name="date_end" />
                                    <field name="account_id" />
                                    <field name="amount_base" string="Base" />
                                    <field
                                        name="amount_percentage"
                                        string="Percentage"
                                    />
                                    <field name="amount_fixed" string="Fixed" />
                                    <field
                                        name="amount_before_tax"
                                        string="Before Tax"
                                    />
                                    <field
                                        name="tax_ids"
                                        widget="many2many_tags"
                                        options="{'no_create': True}"
                                    />
                                    <field name="amount_after_tax" string="After Tax" />
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_before_tax" />
                                <field name="amount_tax" />
                                <field
                                    name="amount_after_tax"
                                    class="oe_subtotal_footer_separator"
                                />
                            </group>
                            <field name="note" placeholder="Note" />
                        </page>
                        <page name="page_other" string="Other Info">
                            <group>
                                <group>
                                    <field name="account_move_id" />
                                    <field
                                        name="allowed_payable_account_ids"
                                        widget="many2many_tags"
                                        invisible="0"
                                    />
                                    <field
                                        name="payable_account_id"
                                        domain="[('id', 'in', allowed_payable_account_ids)]"
                                    />
                                </group>
                                <group>
                                    <field
                                        name="allowed_journal_ids"
                                        widget="many2many_tags"
                                        invisible="0"
                                    />
                                    <field
                                        name="journal_id"
                                        domain="[('id', 'in', allowed_journal_ids)]"
                                    />
                                </group>
                            </group>
                            <field
                                name="tax_ids"
                                widget="one2many_list"
                                mode="tree"
                                context="{'default_commission_id': id}"
                            >
                                <tree string="Commission Tax" editable="bottom">
                                    <field name="tax_id" />
                                    <field name="sequence" />
                                    <field name="account_id" />
                                    <field name="amount_base" />
                                    <field name="amount_tax" />
                                </tree>
                            </field>
                        </page>
                        <page string="Approvals" name="tier_validation">
                            <group>
                                <field name="approval_template_id" />
                                <field
                                    name="active_approver_partner_ids"
                                    widget="many2many_tags"
                                />
                            </group>
                            <field
                                name="approval_ids"
                                attrs="{'invisible':[('approval_ids', '=', [])]}"
                                nolabel="1"
                            />
                        </page>
                        <page
                            name="policy"
                            string="Policies"
                            groups="base.group_system"
                        >
                            <group name="policy_1" colspan="4" col="2">

                                <field
                                    name="allowed_policy_template_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                                <field
                                    name="policy_template_id"
                                    domain="[('id','in',allowed_policy_template_ids)]"
                                />
                                <button
                                    name="action_reload_policy_template"
                                    type="object"
                                    string="Reload Template Policy"
                                />
                                <field name="confirm_ok" />
                                <field name="open_ok" />
                                <field name="done_ok" />
                                <field name="cancel_ok" />
                                <field name="restart_ok" />
                            </group>
                        </page>
                        <page name="log" string="Logs">
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="commission_commission_action" model="ir.actions.act_window">
        <field name="name">Commission</field>
        <field name="res_model">commission.commission</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="commission_commission_menu"
        parent="menu_commission_documents"
        action="commission_commission_action"
        sequence="1"
    />

</odoo>

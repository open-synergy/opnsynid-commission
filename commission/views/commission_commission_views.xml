<odoo>
    <record id="commission_commission_view_tree" model="ir.ui.view">
        <field name="name">commission.commission.tree</field>
        <field name="model">commission.commission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_commission" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="type_id" />
                <field name="partner_id" />
            </tree>
        </field>
    </record>

    <record id="commission_commission_view_form" model="ir.ui.view">
        <field name="name">commission.commission.form</field>
        <field name="model">commission.commission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                        attrs="{'invisible':[('confirm_ok','=',False)]}"
                    />
                    <button
                        name="action_open"
                        type="object"
                        string="Open"
                        class="oe_highlight"
                        attrs="{'invisible':[('open_ok','=',False)]}"
                    />
                    <button
                        name="action_done"
                        type="object"
                        string="Done"
                        class="oe_highlight"
                        attrs="{'invisible':[('done_ok','=',False)]}"
                    />
                    <button
                        name="action_cancel"
                        type="object"
                        string="Cancel"
                        class="oe_highlight"
                        attrs="{'invisible':[('cancel_ok','=',False)]}"
                    />
                    <button
                        name="action_restart"
                        type="object"
                        string="Restart"
                        class="oe_highlight"
                        attrs="{'invisible':[('restart_ok','=',False)]}"
                    />
                    <button
                        name="action_request_approval"
                        string="Request Approval"
                        attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                        type="object"
                    />
                    <!-- <button
                        name="action_print"
                        type="object"
                        string="Print"
                        class="oe_print"
                        icon="fa-print"
                        attrs="{'invisible':[('print_ok','=',False)]}"
                    /> -->
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirm,open,done"
                    />
                </header>
                <sheet>
                    <field name="need_validation" invisible="1" />
                    <field name="approved" invisible="1" />
                    <field name="rejected" invisible="1" />
                    <div
                        role="alert"
                        class="alert alert-warning"
                        attrs="{'invisible': ['|', '|', '|',
                         ('approved', '=', True), ('state', 'not in', ['confirm']),
                         ('rejected', '=', True), ('approval_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                        <p><i class="fa fa-info-circle" />This Record needs to be
                            approved.
                            <button
                                name="action_approve_approval"
                                string="Approve"
                                attrs="{'invisible': [('approval_ids', '=', [])]}"
                                type="object"
                                class="oe_inline oe_button btn-success"
                                icon="fa-check"
                            />
                            <button
                                name="action_reject_approval"
                                string="Reject"
                                type="object"
                                class="btn-icon btn-danger"
                                icon="fa-stop"
                            />
                        </p>
                    </div>
                    <div
                        role="alert"
                        class="alert alert-success"
                        attrs="{'invisible': ['|', '|', ('approved', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                        <p><i class="fa fa-thumbs-up" /> Operation has been <b
                            >approved</b>!</p>
                    </div>
                    <div
                        role="alert"
                        class="alert alert-danger"
                        attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                        <p><i class="fa fa-thumbs-down" /> Operation has been <b
                            >rejected</b>.</p>
                    </div>

                    <!-- <div class="oe_button_box" name="button_box">
                        <button
                                class="oe_stat_button"
                                name="action_open_smart_button"
                                string="Smart Button"
                                type="object"
                                attrs="{'invisible':[('smart_ok','=',False)]}"
                                icon="fa-bars"
                            />
                    </div> -->

                    <!-- <div name="div_smart_buttons" class="oe_right oe_button_box">
                    </div>
                    <div class="oe_left" style="width: 500px;">
                        <div class="oe_title" style="width: 500px;">
                            <label for="name" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                    </div> -->

                    <group>
                        <group name="left">
                            <field name="type_id" />
                            <field name="partner_id" />
                        </group>
                        <group name="right">
                            <field name="date_commission" />
                            <field name="date_start" />
                            <field name="date_end" />
                            <!-- <field name="amount_before_tax" />
                            <field name="amount_tax" />
                            <field name="amount_after_tax" /> -->
                        </group>
                    </group>
                    <notebook colspan="4">
                    <!-- <notebook> -->
                        <!-- <page name="page_note" string="Note">
                            <field name="note" nolabel="1" />
                        </page> -->
                        <page name="page_detail" string="Commission Detail">
                            <field
                                name="detail_ids"
                                nolabel="1"
                                widget="one2many_list"
                                mode="tree"
                                context="{'default_commission_id': id}"
                            >
                                <tree string="Commission Detail" editable="bottom">
                                    <field name="account_move_line_id" />
                                    <field name="account_id" />
                                    <field name="amount_before_tax" />
                                    <field
                                        name="tax_ids"
                                        widget="many2many_tags"
                                        options="{'no_create': True}"
                                    />
                                    <field name="amount_after_tax" />
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_before_tax" />
                                <field name="amount_tax" />
                                <field
                                    name="amount_after_tax"
                                    class="oe_subtotal_footer_separator"
                                />
                            </group>
                            <field name="note" placeholder="Note" />
                        </page>
                        <page name="page_other" string="Other Info">
                            <group>
                                <group>
                                    <field name="account_move_id" />
                                    <field
                                        name="allowed_payable_account_ids"
                                        widget="many2many_tags"
                                        invisible="0"
                                    />
                                    <field
                                        name="payable_account_id"
                                        domain="[('id', 'in', allowed_payable_account_ids)]"
                                    />
                                </group>
                                <group>
                                    <field
                                        name="allowed_journal_ids"
                                        widget="many2many_tags"
                                        invisible="0"
                                    />
                                    <field
                                        name="journal_id"
                                        domain="[('id', 'in', allowed_journal_ids)]"
                                    />
                                </group>
                            </group>
                            <field
                                name="tax_ids"
                                widget="one2many_list"
                                mode="tree"
                                context="{'default_commission_id': id}"
                            >
                                <tree string="Commission Tax" editable="bottom">
                                    <field name="tax_id" />
                                    <field name="sequence" />
                                    <field name="account_id" />
                                    <field name="amount_base" />
                                    <field name="amount_tax" />
                                </tree>
                            </field>
                        </page>
                        <page string="Approvals" name="tier_validation">
                            <group>
                                <field name="approval_template_id" />
                                <field
                                    name="active_approver_partner_ids"
                                    widget="many2many_tags"
                                />
                            </group>
                            <field
                                name="approval_ids"
                                attrs="{'invisible':[('approval_ids', '=', [])]}"
                                nolabel="1"
                            />
                        </page>
                        <page
                            name="policy"
                            string="Policies"
                            groups="base.group_system"
                        >
                            <group name="policy_1" colspan="4" col="2">
                                <field
                                    name="policy_template_id"
                                    groups="base.group_system"
                                />
                                <field name="confirm_ok" />
                                <field name="open_ok" />
                                <field name="done_ok" />
                                <field name="cancel_ok" />
                                <field name="restart_ok" />
                                <!-- <field name="print_ok" />
                                <field name="smart_ok" /> -->
                            </group>
                        </page>
                        <page name="log" string="Logs">
                            <group name="group_5" colspan="4" col="3">
                                <group name="group_log_1" colspan="4" col="3">
                                    <field name="confirm_date" string="Confirmation" />
                                    <field name="confirm_user_id" nolabel="1" />
                                    <field name="open_date" string="Open" />
                                    <field name="open_user_id" nolabel="1" />
                                    <field name="done_date" string="Finish" />
                                    <field name="done_user_id" nolabel="1" />
                                    <field name="cancel_date" string="Cancellation" />
                                    <field name="cancel_user_id" nolabel="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <!-- <field name="activity_ids" widget="mail_activity"/> -->
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_commission_detail_tree" model="ir.ui.view">
        <field name="name">commission.commission_detail.tree</field>
        <field name="model">commission.commission_detail</field>
        <field name="arch" type="xml">
            <tree string="Commission Detail">
                <field name="account_move_line_id" />
                <field name="account_id" />
                <field name="amount_before_tax" />
                <field
                    name="tax_ids"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
                <field name="amount_after_tax" />
            </tree>
        </field>
    </record>

    <record id="view_commission_detail_form" model="ir.ui.view">
        <field name="name">commission.commission_detail.form</field>
        <field name="model">commission.commission_detail</field>
        <field name="arch" type="xml">
            <form string="Commission Detail">
                <group>
                    <group>
                        <field name="account_move_line_id" />
                        <field name="account_id" />
                        <field name="amount_before_tax" />
                        <field
                            name="tax_ids"
                            widget="many2many_tags"
                            options="{'no_create': True}"
                        />
                        <!-- <field name="invoice_line_tax_ids" context="{'type': invoice_type}" domain="[('type_tax_use','!=','none'),('company_id', '=', company_id)]" widget="many2many_tags" options="{'no_create': True}"/> -->
                        <field name="amount_after_tax" />
                    </group>
                </group>
            </form>
        </field>
    </record>


    <record id="commission_commission_action" model="ir.actions.act_window">
        <field name="name">Commission</field>
        <field name="res_model">commission.commission</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_root_commission"
        name="Commission"
        parent="account.menu_finance"
        sequence="5"
    />
        <!--Commission sub-menus-->
        <menuitem
        id="menu_commission_documents"
        name="Commission"
        parent="menu_root_commission"
        sequence="1"
    />
            <menuitem
        id="commission_commission_menu"
        parent="menu_commission_documents"
        action="commission_commission_action"
        sequence="1"
    />
        <menuitem
        id="menu_commission_reporting"
        name="Reporting"
        parent="menu_root_commission"
        sequence="2"
    />
        <menuitem
        id="menu_commission_master"
        name="Configuration"
        parent="menu_root_commission"
        sequence="3"
    />

</odoo>

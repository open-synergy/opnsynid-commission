<odoo>
    <record id="commission_commission_view_tree" model="ir.ui.view">
        <field name="name">commission.commission.tree</field>
        <field name="model">commission.commission</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="display_name" string="# Document" />
                <field name="user_id" />
                <field name="type_id" />
                <field name="date_commission" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="date_due" />
                <field
                    name="amount_before_tax"
                    string="Untaxed"
                    sum="Total Before Tax"
                />
                <field name="amount_tax" string="Tax" sum="Total Tax" />
                <field name="amount_after_tax" string="Total" sum="Total After Tax" />
                <field name="amount_residual" string="Residual" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="commission_commission_view_form" model="ir.ui.view">
        <field name="name">commission.commission.form</field>
        <field name="model">commission.commission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                  <button
                        name="action_populate_detail"
                        type="object"
                        string="Populate"
                        states="draft"
                    />
                    <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                        attrs="{'invisible':[('confirm_ok','=',False)]}"
                    />
                    <button
                        name="action_approve_approval"
                        string="Approve"
                        attrs="{'invisible': [('approval_ids', '=', [])]}"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        name="action_reject_approval"
                        string="Reject"
                        type="object"
                    />
                    <button
                        name="action_open"
                        type="object"
                        string="Open"
                        class="oe_highlight"
                        attrs="{'invisible':[('open_ok','=',False)]}"
                    />
                    <button
                        name="action_cancel"
                        type="object"
                        string="Cancel"
                        attrs="{'invisible':[('cancel_ok','=',False)]}"
                    />
                    <button
                        name="action_restart"
                        type="object"
                        string="Restart"
                        attrs="{'invisible':[('restart_ok','=',False)]}"
                    />
                    <button
                        name="action_request_approval"
                        string="Request Approval"
                        attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                        type="object"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirm,open,done"
                    />
                </header>
                <field name="need_validation" invisible="1" />
                <field name="approved" invisible="1" />
                <field name="rejected" invisible="1" />
                <sheet>
                  <div
                        class="oe_right oe_button_box"
                        style="width: 300px;"
                        name="buttons"
                    >
                  </div>
                  <div class="oe_left" style="width: 500px;">
                      <div class="oe_title" style="width: 500px;">
                          <label for="name" />
                          <h1>
                              <field
                                    name="name"
                                    class="oe_edit_only"
                                    attrs="{'readonly':['|',('state','!=','draft'),'&amp;',('state','=','draft'),('manual_number_ok','=',False)]}"
                                />
                              <field name="display_name" class="oe_read_only" />
                          </h1>
                      </div>
                  </div>
                    <group>
                        <group name="left">
                          <field name="user_id" />
                            <field name="type_id" />
                            <field
                                name="allowed_goal_ids"
                                widget="many2many_tags"
                                invisible="1"
                            />
                            <field
                                name="allowed_tax_ids"
                                widget="many2many_tags"
                                invisible="1"
                            />
                        </group>
                        <group name="right">
                            <field name="date_commission" />
                            <field name="date_start" />
                            <field name="date_end" />
                            <field name="date_due" />
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="page_detail" string="Commission Detail">
                            <field
                                name="detail_ids"
                                nolabel="1"
                                widget="one2many_list"
                                mode="tree"
                                context="{'default_commission_id': id}"
                            >
                                <tree string="Commission Detail" editable="bottom">
                                    <field
                                        name="goal_id"
                                        domain="[('id','in',parent.allowed_goal_ids)]"
                                        invisible="1"
                                    />
                                    <field name="challenge_id" readonly="1" />
                                    <field name="computation_id" invisible="1" />
                                    <field name="date_start" />
                                    <field name="date_end" />
                                    <field name="account_id" />
                                    <field name="analytic_account_id" />
                                    <field name="amount_base" string="Base" />
                                    <field
                                        name="amount_percentage"
                                        string="Percentage"
                                    />
                                    <field name="amount_fixed" string="Fixed" />
                                    <field name="amount_before_tax" string="Untaxed" />
                                    <field
                                        name="tax_ids"
                                        widget="many2many_tags"
                                        options="{'no_create': True}"
                                        string="Tax(es)"
                                    />
                                    <field name="amount_after_tax" string="Subtotal" />
                                </tree>
                            </field>
                            <group name="footer">
                                <group name="tax">
                                    <div class="oe_inline">
                                        <field
                                            name="tax_ids"
                                            widget="one2many_list"
                                            mode="tree"
                                            context="{'default_commission_id': id}"
                                        >
                                            <tree
                                                string="Commission Tax"
                                                editable="bottom"
                                            >
                                              <field name="sequence" widget="handle" />
                                                <field
                                                    name="tax_id"
                                                    domain="[('id','in',parent.allowed_tax_ids)]"
                                                />
                                                <field name="account_id" />
                                                <field name="amount_base" />
                                                <field
                                                    name="amount_tax"
                                                    sum="Total Tax Amount"
                                                />
                                            </tree>
                                        </field>
                                    </div>
                                </group>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_before_tax" string="Untaxed" />
                                    <field name="amount_tax" string="Tax" />
                                    <field
                                        name="amount_after_tax"
                                        class="oe_subtotal_footer_separator"
                                        string="Total"
                                    />
                                    <field name="amount_residual" string="Residual" />
                                </group>
                            </group>
                            <field name="note" placeholder="Note" />
                        </page>
                        <page name="accounting" string="Accounting">
                            <group name="accounting_1">
                                <group name="accounting_1_1">
                                    <field
                                        name="allowed_payable_account_ids"
                                        widget="many2many_tags"
                                        invisible="1"
                                    />
                                    <field
                                        name="payable_account_id"
                                        domain="[('id', 'in', allowed_payable_account_ids)]"
                                    />
                                    <field
                                        name="allowed_journal_ids"
                                        widget="many2many_tags"
                                        invisible="1"
                                    />
                                    <field
                                        name="journal_id"
                                        domain="[('id', 'in', allowed_journal_ids)]"
                                    />
                                </group>
                                <group>
                                    <field name="account_move_id" />
                                    <field name="payable_move_line_id" />
                                </group>
                            </group>
                        </page>
                        <page name="payment" string="Payments">
                            <group name="payment_1" colspan="4" col="2">
                                <field name="payment_move_line_ids" nolabel="1" />
                            </group>
                            <group
                                string="Latest Payment"
                                name="payment_2"
                                colspan="4"
                                col="2"
                            >
                                <field name="reconciled" />
                                <field name="last_payment_move_line_id" />
                                <field name="last_payment_date" />
                            </group>
                        </page>
                        <page string="Approvals" name="tier_validation">
                            <group>
                                <field name="approval_template_id" />
                                <field
                                    name="active_approver_partner_ids"
                                    widget="many2many_tags"
                                />
                            </group>
                            <field
                                name="approval_ids"
                                attrs="{'invisible':[('approval_ids', '=', [])]}"
                                nolabel="1"
                            />
                        </page>
                        <page
                            name="policy"
                            string="Policies"
                            groups="base.group_system"
                        >
                            <group name="policy_1" colspan="4" col="2">

                                <field
                                    name="allowed_policy_template_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                                <field
                                    name="policy_template_id"
                                    domain="[('id','in',allowed_policy_template_ids)]"
                                />
                                <button
                                    name="action_reload_policy_template"
                                    type="object"
                                    string="Reload Template Policy"
                                />
                                <field name="confirm_ok" />
                                <field name="open_ok" />
                                <field name="cancel_ok" />
                                <field name="restart_ok" />
                                <field name="manual_number_ok" />
                            </group>
                        </page>
                        <page name="log" string="Logs">
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="commission_commission_action" model="ir.actions.act_window">
        <field name="name">Commission</field>
        <field name="res_model">commission.commission</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="commission_commission_menu"
        parent="menu_commission_documents"
        action="commission_commission_action"
        sequence="1"
    />

</odoo>
